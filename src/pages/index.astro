---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BlogCard from '../components/BlogCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1 class="hero-title">Browse Our Resources</h1>
					<p class="hero-subtitle">
						Discover insights on business, technology, and life. Learn from real experiences, practical strategies, and lessons learned building companies and products.
					</p>
					<a href="#posts" class="hero-cta">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<line x1="5" y1="12" x2="19" y2="12"></line>
							<polyline points="12 5 19 12 12 19"></polyline>
						</svg>
						Read latest articles
					</a>
				</div>
				<div class="hero-visual">
					<div class="hero-placeholder">
						<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
							<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
							<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
							<circle cx="12" cy="12" r="2" fill="var(--accent)"></circle>
							<path d="M10 10l-2-2"></path>
							<path d="M14 14l2 2"></path>
						</svg>
					</div>
				</div>
			</section>

			<section class="posts-grid" id="posts">
				{posts.map((post) => (
					<BlogCard
						title={post.data.title}
						description={post.data.description}
						pubDate={post.data.pubDate}
						heroImage={post.data.heroImage}
						slug={post.id}
						author={post.data.author}
						tags={post.data.tags}
					/>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0;
	}

	.hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		border-radius: 32px;
		overflow: hidden;
		margin: 2rem 1rem;
		box-shadow: var(--box-shadow-lg);
		min-height: 500px;
	}

	.hero-content {
		background: var(--primary);
		padding: 4rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 2rem;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 700;
		margin: 0;
		color: white;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	.hero-subtitle {
		font-size: 1.125rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 500px;
		margin: 0;
		line-height: 1.7;
	}

	.hero-cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: var(--accent);
		color: white;
		padding: 1rem 2rem;
		border-radius: 50px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
		align-self: flex-start;
		box-shadow: 0 4px 12px rgba(255, 127, 80, 0.3);
	}

	.hero-cta:hover {
		background: var(--accent-dark);
		transform: translateX(4px);
		box-shadow: 0 6px 16px rgba(255, 127, 80, 0.4);
	}

	.hero-cta svg {
		transition: transform 0.3s ease;
	}

	.hero-cta:hover svg {
		transform: translateX(4px);
	}

	.hero-visual {
		background: var(--cream);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 3rem;
	}

	.hero-placeholder svg {
		color: var(--primary);
		opacity: 0.3;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2.5rem;
		margin: 4rem 1rem;
		padding-bottom: 4rem;
	}

	@media (max-width: 1200px) {
		.posts-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.hero {
			grid-template-columns: 1fr;
			margin: 1rem;
			min-height: auto;
		}

		.hero-content {
			padding: 3rem 2rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.hero-visual {
			display: none;
		}

		.posts-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			margin: 2rem 1rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			border-radius: 24px;
		}

		.hero-content {
			padding: 2rem 1.5rem;
		}

		.hero-title {
			font-size: 2rem;
		}

		.posts-grid {
			margin: 1.5rem 0.5rem;
		}
	}
</style>
